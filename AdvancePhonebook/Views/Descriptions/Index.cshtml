@model IEnumerable<AdvancePhonebook.Models.Descriptions>

@{
    ViewData["Title"] = "توضیحات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <h1>@ViewData["Title"]</h1>
</p>
<p>
    <a asp-action="Create">
        <button class="btn btn-success">
            + افزودن
        </button>
    </a>
</p>
<div class="table-responsive">
    <table class="table mg-b-0 tx-12">
        <thead>
        <tr class="tx-10">
            <th>
                موضوع
            </th>
            <th>
               توضیحات
            </th>
            <th>
               مخاطب
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
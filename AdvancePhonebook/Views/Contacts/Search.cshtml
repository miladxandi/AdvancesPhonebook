@model AdvancePhonebook.Models.Contacts

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <p>
        <h4>@ViewData["Title"]</h4>
    </p>
    <hr />
    <div class="row">
        <div class = "col-sm-2">
            نام
        </div>
        <div class = "col-sm-2">
            سمت و شرکت
        </div>
        <div class = "col-sm-2">
            شماره دفتر
        </div>
        <div class = "col-sm-2">
            داخلی
        </div>
        <div class = "col-sm-2">
            موبایل
        </div>
        <div class = "col-sm-2">
            عملیات
        </div>
    </div>
    <hr>
    <div class="row">
        <div class = "col-sm-2">
            @Model.Name
        </div>
        <div class = "col-sm-2">
            @Model.Role در شرکت @Model.Enterprise.Name
        </div>
        <div class = "col-sm-2">
            @Model.PhoneNumber
        </div>
        <div class = "col-sm-2">
            @Model.Line
        </div>
        <div class = "col-sm-2">
            @Model.CellPhone
        </div>
        <div class = "col-sm-2">
            <a asp-controller="Contacts" asp-action="Details" asp-route-id="@Model.Id" >
                مشاهده
            </a>
        </div>
    </div>
</div>
